{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": [
			"vitest/globals"
		]
	},
	"include": [
		"next-env.d.ts",
		"index.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules"
	],
	// "ts-node": {
	// 	// Do not forget to `npm i -D tsconfig-paths`
	// 	"require": [
	// 		"tsconfig-paths/register"
	// 	]
	// }
}
